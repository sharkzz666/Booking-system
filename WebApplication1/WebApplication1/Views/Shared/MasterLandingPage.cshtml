<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <title>@ViewBag.Title</title>
    <style type="text/css">
        .navbar {
            font-family: "Century Gothic",CenturyGothic,AppleGothic,sans-serif;
            font-weight: 500;
        }

        #sizegambar {
            width: 104px;
            height: 64px;
        }

        #navbar-header-admin {
            font-family: Calibri,Candara,Segoe,"Segoe UI",Optima,Arial,sans-serif;
            font-weight: bold;
            text-rendering: optimizeSpeed;
            text-decoration-color: aqua;
        }

        .topline {
            height: 3px;
            background-color: aqua;
            background: linear-gradient(to right, aqua, rgb(255, 255, 255));
            background: -moz-linear-gradient(to right, aqua, rgb(255, 255, 255));
        }
        .gambar1{
            width: 802px;
            height: 210px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default">
        <div class="topline">&nbsp;</div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Logo", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand", id = "navbar-header-admin" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-default">
                    <li><a href=@Url.Action("Index", "Admin", new { @id = Session["UserID"] })>Home</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Booking <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Check Booking</a></li>
                            <li><a href="#">Chalets</a></li>
                            <li><a href="#">Booking Calendar</a></li>

                        </ul>
                    </li>
                    <li><a href=@Url.Action("Index", "ManageProduct", new { @id = Session["UserID"] })>Activities</a></li>
                    <li><a href=@Url.Action("Index", "ManageProduct", new { @id = Session["UserID"] })>Contact Us</a></li>
                </ul>


                <script type="text/javascript">
                    $('.dropdown-toggle').dropdown()
                </script>

            </div>
        </div>
    </div>
    <div class="container">

        @RenderBody()

    </div>

</body>
</html>
